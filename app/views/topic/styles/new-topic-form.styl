@import 'nib'
@import '../../styles/_utils'

slide-down($slided-height, $duration, $type = ease-in)
  height: 0
  opacity: 0
  transition: height $duration $type, visibility $duration $type, opacity $duration $type
  input, textarea
    display: none
  &.visible
    height: $slided-height
    opacity: 1
    input, textarea
      display: inline

.new-topic-form
  &-fields
    slide-down(311px, ease-in, 0.3s)
    &.visible
      padding-bottom: 10px
  &-toggle-fields-button
    &-container
      nav-button()
  &-title, &-text
    padding: 6px
  &-title
    width: 50%
    font-size: 25px
    font-weight: bold
    color: #444
  &-text
    width: 100%
    height: 200px
    margin: 10px 0
  &-submit-button-container
    display: none
    text-align: right

.new-topic-form-fields.visible .new-topic-form-submit-button-container
  display: block
