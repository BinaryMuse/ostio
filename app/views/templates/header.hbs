<h1 class="header-logo">
  <a href="/{{#if_logged_in}}feed/{{/if_logged_in}}">Ost.io</a>
</h1>
<div class="header-auth">
  {{#if_logged_in}}
    {{#with_user}}
      <a href="/{{login}}"><img class="avatar header-avatar" src="{{#gravatar}}{{gravatar_id}}{{/gravatar}}"></a>
      <a href="/{{login}}">{{login}}</a>
      <a class="icon-logout" href="/logout/"></a>
    {{/with_user}}
  {{else}}
    {{#with_config}}
      <button class="header-login-button button go-to" data-href="{{api.root}}/auth/github">Login with GitHub</button>
    {{/with_config}}
  {{/if_logged_in}}
</div>
