@import 'nib'

.repo
  &-topic
    padding: 10px 0
    border-image: url('../images/hr.gif') 3 0 repeat
    border-width: 3px 0 0 0
    &:last-child
      border-bottom-width: 3px
    &.filtering
      transition: all 0.2s ease-out
    &.filtered
      transform: translateX(-100%)

.search-topics
  float: right
